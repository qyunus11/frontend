<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.diyabet.demo.controller.LoginController" prefWidth="360" prefHeight="300">
    <children>
        <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="40" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40">
            <Label text="Diyabet Takip Sistemi" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <TextField fx:id="emailField" promptText="E-posta" />
            <PasswordField fx:id="passwordField" promptText="Şifre" />
            <Button fx:id="loginButton" text="Giriş Yap" onAction="#handleLogin" maxWidth="Infinity"/>
            <Label fx:id="statusLabel" textFill="red"/>
        </VBox>
    </children>
</AnchorPane>